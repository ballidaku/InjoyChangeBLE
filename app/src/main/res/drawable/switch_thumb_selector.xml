<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_checked="false">

        <layer-list
            xmlns:android="http://schemas.android.com/apk/res/android">

            <item>

                <shape android:shape="rectangle">

                    <solid android:color="@color/colorGray"/>

                    <corners android:radius="30dp"/>

                    <padding android:bottom="@dimen/_1sdp"
                             android:left="@dimen/_1sdp"
                             android:right="@dimen/_1sdp"
                             android:top="@dimen/_1sdp"/>

                    <size
                        android:width="20dp"
                        android:height="20dp"/>
                </shape>
            </item>


            <item>

                <shape android:shape="rectangle">


                    <solid android:color="@color/colorWhite"/>

                    <corners android:radius="30dp"/>

                    <size
                        android:width="30dp"
                        android:height="30dp"/>
                </shape>
            </item>


        </layer-list>

    </item>

    <item android:state_checked="true">
        <layer-list
            xmlns:android="http://schemas.android.com/apk/res/android">

            <item>

                <shape android:shape="rectangle">

                    <solid android:color="#00C24B"/>

                    <corners android:radius="30dp"/>

                    <padding android:bottom="@dimen/_1sdp"
                             android:left="@dimen/_1sdp"
                             android:right="@dimen/_1sdp"
                             android:top="@dimen/_1sdp"/>

                    <size
                        android:width="20dp"
                        android:height="20dp"/>
                </shape>
            </item>


            <item>

                <shape android:shape="rectangle">


                    <solid android:color="@color/colorWhite"/>

                    <corners android:radius="30dp"/>

                    <size
                        android:width="30dp"
                        android:height="30dp"/>
                </shape>
            </item>


        </layer-list>
    </item>

</selector>