<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_checked="false">

        <layer-list
            xmlns:android="http://schemas.android.com/apk/res/android">

            <item>

                <shape android:shape="rectangle">

                    <solid android:color="@color/colorGray"/>

                    <corners android:radius="@dimen/_15sdp"/>

                    <padding android:bottom="@dimen/_3sdp"
                             android:left="@dimen/_3sdp"
                             android:right="@dimen/_3sdp"
                             android:top="@dimen/_3sdp"/>

                    <size
                        android:width="@dimen/_15sdp"
                        android:height="@dimen/_15sdp"/>
                </shape>
            </item>


            <item>

                <shape android:shape="rectangle">


                    <solid android:color="@color/colorWhite"/>

                    <corners android:radius="@dimen/_15sdp"/>

                    <size
                        android:width="@dimen/_15sdp"
                        android:height="@dimen/_15sdp"/>
                </shape>
            </item>


        </layer-list>

    </item>

    <item android:state_checked="true">
        <layer-list
            xmlns:android="http://schemas.android.com/apk/res/android">

            <item>

                <shape android:shape="rectangle">

                    <solid android:color="#00C24B"/>

                    <corners android:radius="@dimen/_15sdp"/>

                    <padding android:bottom="@dimen/_3sdp"
                             android:left="@dimen/_3sdp"
                             android:right="@dimen/_3sdp"
                             android:top="@dimen/_3sdp"/>

                    <size
                                android:width="@dimen/_15sdp"
                        android:height="@dimen/_15sdp"/>
                </shape>
            </item>


            <item>

                <shape android:shape="rectangle">


                    <solid android:color="@color/colorWhite"/>

                    <corners android:radius="@dimen/_15sdp"/>

                    <size
                        android:width="@dimen/_15sdp"
                        android:height="@dimen/_15sdp"/>
                </shape>
            </item>


        </layer-list>
    </item>

</selector>