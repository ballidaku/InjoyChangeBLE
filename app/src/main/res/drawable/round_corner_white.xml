            <corners android:radius="@dimen/_20sdp"/>
            <solid android:color="@color/colorGray"/>
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/_20sdp"/>
            <solid android:color="@color/colorGray"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/_20sdp"/>
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>

</selector>


