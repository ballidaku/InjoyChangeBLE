<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBlue"
              android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Set Goals"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <android.support.v7.widget.CardView
        android:id="@+id/cardv_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Steps"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

               <!-- <TextView
                    android:id="@+id/txtv_steps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="5000"
                    android:textStyle="bold"/>-->

                <EditText
                    android:id="@+id/edtv_steps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Steps"
                    android:textStyle="bold"
                    android:background="@null"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:drawableEnd="@drawable/ic_check_selected"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="KM"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

              <!--  <TextView
                    android:id="@+id/txtv_miles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="2.5 per day"
                    android:textStyle="bold"/>-->

                <EditText
                    android:id="@+id/edtv_miles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="KM"
                    android:textStyle="bold"
                    android:background="@null"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:drawableEnd="@drawable/ic_check_selected"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Calories"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

               <!-- <TextView
                    android:id="@+id/txtv_calories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="7000 per day"
                    android:textStyle="bold"/>-->

                <EditText
                    android:id="@+id/edtv_calories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Calories"
                    android:textStyle="bold"
                    android:background="@null"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:drawableEnd="@drawable/ic_check_selected"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Sleep"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtv_sleep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Sleep"
                    android:textStyle="bold"
                    android:background="@null"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:drawableEnd="@drawable/ic_check_selected"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>