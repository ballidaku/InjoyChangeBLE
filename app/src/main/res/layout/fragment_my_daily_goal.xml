<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_background_with_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/my_goal_image"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Set Goals"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"/>


        <!--    <android.support.v7.widget.CardView
                android:id="@+id/cardv_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"

                android:src="@drawable/ic_my_goal_bg"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/ic_steps_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steps"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- <TextView
                         android:id="@+id/txtv_steps"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="2"
                         android:padding="10dp"
                         android:text="5000"
                         android:textStyle="bold"/>-->

                    <EditText
                        android:id="@+id/edtv_steps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawableEnd="@mipmap/ic_edit"
                        android:hint="Steps"
                        android:inputType="number"
                        android:background="@null"
                        android:padding="5dp"
                        android:maxLength="6"
                        android:theme="@style/EditTextStyle2"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/ic_km_miles_small"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!--  <TextView
                          android:id="@+id/txtv_miles"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="2"
                          android:padding="10dp"
                          android:text="2.5 per day"
                          android:textStyle="bold"/>-->

                    <EditText
                        android:id="@+id/edtv_miles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawableEnd="@mipmap/ic_edit"
                        android:hint="Miles"
                        android:inputType="numberDecimal"
                        android:background="@null"
                        android:padding="5dp"
                        android:theme="@style/EditTextStyle2"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorGray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/ic_calories_small"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- <TextView
                         android:id="@+id/txtv_calories"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="2"
                         android:padding="10dp"
                         android:text="7000 per day"
                         android:textStyle="bold"/>-->

                    <EditText
                        android:id="@+id/edtv_calories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:drawableEnd="@mipmap/ic_edit"
                        android:hint="Calories"
                        android:inputType="number"
                        android:background="@null"
                        android:padding="5dp"
                        android:theme="@style/EditTextStyle2"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorGray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/ic_sleep_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtv_sleep"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@null"
                        android:drawableEnd="@mipmap/ic_edit"
                        android:hint="Sleep"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:theme="@style/EditTextStyle2"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


        <!-- </android.support.v7.widget.CardView>-->


    </LinearLayout>

</ScrollView>
