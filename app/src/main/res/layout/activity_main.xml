<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/container_body"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:elevation="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout_challenge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorBlue"/>

                <ImageView
                    android:id="@+id/imgv_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_challenge"/>

                <TextView
                    android:id="@+id/txtv_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CHALLENGE"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_data"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorBlue"/>

                <ImageView
                    android:id="@+id/imgv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_data"/>

                <TextView
                    android:id="@+id/txtv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DATA"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_myinfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorBlue"/>

                <ImageView
                    android:id="@+id/imgv_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_myinfo"/>

                <TextView
                    android:id="@+id/txtv_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MY INFO"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorBlue"/>

                <ImageView
                    android:id="@+id/imgv_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_alarm"/>

                <TextView
                    android:id="@+id/txtv_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ALARM"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.ble.sharan.mainScreen.fragments.mainFragments.FragmentDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_fragment_drawer"
        tools:layout="@layout/fragment_fragment_drawer"/>

</android.support.v4.widget.DrawerLayout>