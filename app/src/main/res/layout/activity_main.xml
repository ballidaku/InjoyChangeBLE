<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/my_toolbar"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/container_body"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            app:elevation="20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/linearLayout_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_data"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="?attr/colorPrimary"/>

                <ImageView
                    android:id="@+id/imgv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_home_gray"/>

                <TextView
                    android:id="@+id/txtv_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:text="HOME"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_challenge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="?attr/colorPrimary"/>

                <ImageView
                    android:id="@+id/imgv_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_challenge_gray"/>

                <TextView
                    android:id="@+id/txtv_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:text="CHALLENGE"/>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/linearLayout_myinfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="?attr/colorPrimary"/>

                <ImageView
                    android:id="@+id/imgv_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_profile_gray"/>

                <TextView
                    android:id="@+id/txtv_myinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:text="MY PROFILE"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout_alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="?attr/colorPrimary"/>

                <ImageView
                    android:id="@+id/imgv_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/ic_alarm_gray"/>

                <TextView
                    android:id="@+id/txtv_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:text="ALARM"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




