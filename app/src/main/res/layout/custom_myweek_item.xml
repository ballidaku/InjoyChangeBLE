<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/txtv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_orange"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Date"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <!--<LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">-->

    <TextView
        android:id="@+id/txtv_calories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:drawablePadding="5dp"
        android:text="Calories"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:drawableRight="@mipmap/ic_calories_very_small"
        android:textStyle="bold"/>

    <!--</LinearLayout>-->

    <TextView
        android:id="@+id/txtv_steps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:drawablePadding="5dp"
        android:text="Steps"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:drawableRight="@mipmap/ic_steps_very_small"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtv_km"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="Km"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:textColor="@color/colorBlack"
        android:drawableRight="@mipmap/ic_km_miles_very_small"
        android:textStyle="bold"/>

</LinearLayout>